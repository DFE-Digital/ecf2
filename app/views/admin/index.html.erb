<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl">Admin</h1>

    <p class="govuk-body">
      Placeholder page for the admin site
    </p>

    <%= govuk_summary_list(
      rows: [
        { key: { text: "Signed in as:" }, value: { text:  current_user.name } },
        { key: { text: "Email" }, value: { text:  current_user.email } },
        { key: { text: "Via" }, value: { text:  session_manager.provider } },
        { key: { text: "Session expires" }, value: { text: session_manager.expires_at.localtime.to_fs(:govuk) } },
      ]
    ) %>
  </div>
</div>
